<?xml version="1.0"?>
<CARPEVERSION>0.1</CARPEVERSION>
<OPTIONS>
	<FILES>
		<MOVIENAME>data/movie.avi</MOVIENAME>
		<EYEDIRECTORY>data/eye</EYEPATH>	
		<BINOCULARDATA>true</BINOCULARDATA>
	</FILES>
	<EYETRACKERMONITOR>
		<RESOLUTION>	
			<WIDTH>1280</WIDTH>
			<HEIGHT>960</HEIGHT>
		</RESOLUTION>
	</EYETRACKERMONITOR>
	<DISPLAY>
		<MOVIE>	
			<SHOW>true</SHOW>
			<REALTIME>false</REALTIME>
			<STARTPAUSED>true</STARTPAUSED>
		</MOVIE>
		<EYES>	
			<SHOW>true</SHOW>
			<SHOWMEANOFBINOCULARDATA>false</SHOWMEANOFBINOCULARDATA>
		</EYES>
		<HEATMAP>
			<SHOW>true</SHOW>
			<NORMALIZE>true</NORMALIZE>
			<USECLUSTERING>true</USECLUSTERING>
			<MASKMOVIE>false</MASKMOVIE>
			<SHOWCONTOURS>false</SHOWCONTOURS>
		</HEATMAP>
		<RGBHISTOGRAM>true</RGBHISTOGRAM>
	</DISPLAY>
	<RECORDING>
		<MOVIE>
			<SAVEMOVIE>true</SAVEMOVIE>
			<MOVIENAME>output.avi</MOVIENAME>
		</MOVIE>
		<CLUSTERING>
			<!-- Note that "OPTIONS:DISPLAY:HEATMAP:USECLUSTERING" must be set to true -->
			<STATISTICSOUTPUT>true</STATISTICSOUTPUT> 
			<FILENAME>outputstats.xml</FILENAME>
		<CLUSTERING>
	</RECORDING>
</OPTIONS>